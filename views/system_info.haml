!!! 5
%html

  %head
    %meta(charset="utf-8")
    %title Screenly OSE

    %link(href="/static/css/bootstrap.css", rel="stylesheet")
    %link(href="/static/css/screenly.css", rel="stylesheet")
    %script(src="/static/js/jquery-1.9.1.min.js")

  %body

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand(href="/")
            %strong Systeme
            %span Signage

          %ul.nav.pull-right
            / - if not up_to_date:
            /   %li.update-available
            /     %a(href="http://www.screenlyapp.com/ose.html#upgrade")
            /       %i.icon-circle-arrow-down.icon-white
            /       Update Available
            %li
              %a(href="/settings")
                %i.icon-cog.icon-white
                Parametres
            %li.divider-vertical
            %li
              %a(href="/system_info")
                %i.icon-tasks.icon-white
                Information Systeme

    .container
      .row
        .span12
          %h1.page-header
            System Info

          %table.table.table-bordered(style="width: 100%")
            %thead
              %tr
                %th charge moyenne
                %th Espace Libre
                %th Tourne Depuis
                %th Info moniteur
            %tbody
              %tr
                %td ${loadavg}
                %td ${free_space}
                %td ${uptime.days} Jours et ${uptime.seconds / 3600} heures
                %td
                  - if display_info:
                    %ul
                      - for info in display_info:
                        %li ${info.strip().capitalize()}
          %section
            .header
              Derniere consultation Logs

          - if viewlog:
            %table.table.table-striped
              - for line in viewlog:
                %tr
                  %td ${line}
          - else:
            %p Pas de message recents des Logs.

    #footer
      .container
        / .copy
        /   &copy; <strong>2012-2015.</strong> WireLoad, Inc.
        / %a(id="wireload-logo", href="http://wireload.net/")
        /   %img(src="/static/img/wireload-logo.png", alt="WireLoad")
